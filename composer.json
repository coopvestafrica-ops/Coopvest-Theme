{
    "name": "kortix/coopvest-theme",
    "description": "Coopvest Africa - WordPress Theme with REST API",
    "type": "wordpress-theme",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "firebase/php-jwt": "^6.10",
        "bacon/bacon-qr-code": "^2.0",
        "tecnickcom/tcpdf": "^6.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Coopvest\\": "api/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
